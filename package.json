		"chai": "^5.1.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"mocha": "^10.4.0",
		"nock": "^13.5.4",
		"semantic-release": "^23.0.8",
		"sinon": "^17.0.2",
		"stringify-object": "^5.0.0",
